<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_idn"
        android:layout_margin="16dp"
        style="@style/Theme.AndNews.Chip"
        android:text="@string/indonesia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_usa"
        style="@style/Theme.AndNews.Chip"
        android:layout_marginStart="16dp"
        android:text="@string/usa"
        app:layout_constraintBottom_toBottomOf="@+id/chip_idn"
        app:layout_constraintStart_toEndOf="@+id/chip_idn"
        app:layout_constraintTop_toTopOf="@+id/chip_idn" />

</androidx.constraintlayout.widget.ConstraintLayout>