<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.AndNews</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize12Percent" parent="Theme.AndNews">
        <item name="cornerSize">12%</item>
    </style>

    <style name="Theme.AndNews.Button" parent="Theme.AndNews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/ic_button_background</item>
        <item name="fontFamily">@font/sfprodisplaymedium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent" parent="Theme.AndNews">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sfprodisplaybold</item>
    </style>

    <style name="TextContent.Title" parent="TextContent">
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextContent.ItemTitle" parent="TextContent.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent.Description" parent="TextContent">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/grey_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.ItemCategory" parent="TextContent.Description">
        <item name="android:textSize">18sp</item>
    </style>



</resources>